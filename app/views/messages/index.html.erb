<!DOCTYPE html>
<html>
<head>
  <title>MessageBoard</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Message Board</a>
      </div>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
<%= form_for(@message) do |f| %>
 <form class: form-horizontal>
     <label>名前
    <%= f.text_area :name, :maxlength => "15", :size => "30", :placeholder => "名前を入力(15字以内)" %></label>
    <br />
    
    <label>内容
    <%= f.text_area :body, :maxlength => "100", :size => "100", :placeholder => "コメントを入力(100字以内)" %>
    </label>
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </form>
    
<% end %>