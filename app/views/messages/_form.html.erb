
<%= form_for @message, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
 <div class = "container-fluid">
   <div class = "form-group">
    <%= f.label :name, "名前", class: "col-sm-2 label-control" %>
    <%= f.text_field :name, class: "col-sm-10 form-control", :placeholder => "名前を入力(20字以内)" %>
   </div>  
 </div>
 <div class = "container-fluid">
   <div class = "form-group">
    <%= f.label :body, "内容", class: "col-sm-2 label-control" %>
    <%= f.text_area :body, class: "col-sm-10 form-control", :placeholder => "コメントを入力(30字以内)" %>
 </div>
 </div>
 <div class = "container-fluid">
 <div class = "form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
</div>  
 </div>  
    
<% end %>