
<%= form_for @message, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :name, "名前", class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :name,  class: "form-control", :placeholder => "名前を入力" %>
    </div>
    <%= f.label :age, "年齢", class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
        <%= f.text_field :age, class: "form-control", :placeholder => "年齢を入力" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-sm-1 control-label">内容</label>
    <div class="col-sm-11">
      <%= f.text_area :body, class: "form-control", :placeholder => "コメントを入力" %>
    </div>
  </div>
    <%= f.submit class: "btn btn-sm btn-primary" %>
    
    
<% end %>